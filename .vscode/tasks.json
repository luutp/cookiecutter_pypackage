{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run bash",
            "type": "shell",
            "command": "bash ${file}",
            "_runner": "terminal",
            "problemMatcher": []
        },
        {
            "label": "chmod",
            "type": "shell",
            "command": "sudo chmod +x ${file}",
            "_runner": "terminal",
            "problemMatcher": []
        },
        {
            "label": "autoflake",
            "command": "/home/pi/venv/cncvc/bin/python",
            "args": [
                "-m",
                "autoflake",
                "--in-place",
                "--remove-all-unused-imports",
                "${file}"
            ]
        }
    ]
}